<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppThemeAqua" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimaryAqua</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAqua</item>
        <item name="colorAccent">@color/colorAccentAqua</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>


    <style name="BottomRightFabStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>


    <!-- Style for the EditorActivity -->
    <style name="EditorActivityTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="IconEditTextStyle" parent="EditorActivityTextViewStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

    <style name="EditTextStyle" parent="EditorActivityTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="SpinnerStyle" parent="EditTextStyle">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PartnerProfileImageStyle" parent="ProfileActivityTextViewStyle">
        <item name="android:layout_width">@dimen/profile_img_width</item>
        <item name="android:layout_height">@dimen/profile_img_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PartnerProfileExample">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Styles for ProfileActivity -->

    <style name="ProfileActivityTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="ProfileActivityTextViewEntryStyle" parent="ProfileActivityTextViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ProfileActivityLabelStyle" parent="ProfileActivityTextViewStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>

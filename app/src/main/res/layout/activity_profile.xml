<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:context=".ProfileActivity">

        <TextView
            android:id="@+id/partner_profile_img_none"
            style="@style/PartnerProfileImageStyle"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/user_item_circle"
            android:textColor="@color/colorBackground"
            android:textSize="36sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="A" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/partner_profile_img"
            style="@style/PartnerProfileImageStyle"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/profile_picture"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/partner_profile_gender_label"
            style="@style/ProfileActivityLabelStyle"
            android:text="@string/gender_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/partner_profile_img"/>

        <TextView
            android:id="@+id/partner_profile_gender_entry"
            style="@style/ProfileActivityTextViewEntryStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/partner_profile_gender_label"
            tools:text="Male" />

        <TextView
            android:id="@+id/partner_profile_notes_label"
            style="@style/ProfileActivityLabelStyle"
            android:text="@string/notes_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partner_profile_gender_entry"
            tools:text="Notes" />

        <TextView
            android:id="@+id/partner_profile_notes_entry"
            style="@style/ProfileActivityTextViewEntryStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partner_profile_notes_label"
            tools:text="Best time ever!" />

        <TextView
            android:id="@+id/partner_profile_status_label"
            style="@style/ProfileActivityLabelStyle"
            android:text="@string/status_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partner_profile_notes_entry"
            tools:text="Status" />

        <TextView
            android:id="@+id/partner_profile_status_entry"
            style="@style/ProfileActivityTextViewEntryStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partner_profile_status_label"
            tools:text="It's complicated" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edit_partner_fab"
            style="@style/BottomRightFabStyle"
            android:src="@drawable/ic_action_edit"
            app:fabSize="normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>
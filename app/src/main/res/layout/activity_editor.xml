<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.EditorActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/partner_editor_img_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".3"/>

        <ImageView
            android:id="@+id/editor_partner_name_icon"
            style="@style/IconEditTextStyle"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_icon_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partner_editor_img_container"
            app:layout_constraintTop_toTopOf="@+id/name_et" />

        <EditText
            android:id="@+id/name_et"
            style="@style/EditTextStyle"
            android:inputType="textCapWords"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editor_partner_name_icon"
            app:layout_constraintTop_toBottomOf="@+id/partner_editor_img_container"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".8" />

        <ImageView
            android:id="@+id/gender_icon"
            style="@style/IconEditTextStyle"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_gender_icon"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_gender" />

        <Spinner
            android:id="@+id/spinner_gender"
            style="@style/SpinnerStyle"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/gender_icon"
            app:layout_constraintTop_toBottomOf="@+id/name_et" />

        <ImageView
            android:id="@+id/status_icon"
            style="@style/IconEditTextStyle"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_status_icon"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_status" />

        <Spinner
            android:id="@+id/spinner_status"
            style="@style/SpinnerStyle"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toEndOf="@+id/status_icon"
            app:layout_constraintTop_toBottomOf="@+id/spinner_gender" />

        <EditText
            android:id="@+id/notes"
            style="@style/EditTextStyle"
            android:inputType="textCapWords"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_status"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="1" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

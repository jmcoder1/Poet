<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ActivityStyle"
    tools:context=".EditorActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_img_width"
        android:layout_height="@dimen/profile_img_height"
        android:src="@drawable/profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/profile_img_marginTop"
        android:layout_marginBottom="@dimen/profile_img_marginBottom" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/name_icon"
                    style="@style/CategoryIconStyle"
                    android:src="@drawable/ic_icon_person"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/name_icon"
                    android:layout_toEndOf="@+id/name_icon">

                    <TextView
                        android:id="@+id/name_label"
                        style="@style/CategoryLabelStyle"
                        android:text="@string/name_label"/>

                    <EditText
                        android:id="@+id/name_et"
                        style="@style/EditTextStyle"
                        android:inputType="textCapWords" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_number_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_view"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/phone_number_icon"
                    style="@style/CategoryIconStyle"
                    android:src="@drawable/ic_phone_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/phone_number_icon"
                    android:layout_toEndOf="@+id/phone_number_icon">

                    <TextView
                        android:id="@+id/phone_number_label"
                        style="@style/CategoryLabelStyle"
                        android:text="@string/phone_number_label"/>

                    <EditText
                        android:id="@+id/phone_number_et"
                        style="@style/EditTextStyle"
                        android:inputType="phone" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gender_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_number_view"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/gender_icon"
                    style="@style/CategoryIconStyle"
                    android:src="@drawable/ic_phone_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/gender_icon"
                    android:layout_toEndOf="@+id/gender_icon">

                    <TextView
                        android:id="@+id/gender_label"
                        style="@style/CategoryLabelStyle"
                        android:text="@string/gender_label" />

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:spinnerMode="dropdown"
                        style="@style/SpinnerStyle" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/status_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gender_view">

                <ImageView
                    android:id="@+id/status_icon"
                    style="@style/CategoryIconStyle"
                    android:src="@drawable/ic_phone_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/status_icon"
                    android:layout_toRightOf="@+id/status_icon"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/status_label"
                        style="@style/CategoryLabelStyle"
                        android:text="@string/status_label" />

                    <Spinner
                        android:id="@+id/spinner_status"
                        style="@style/SpinnerStyle"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

            </RelativeLayout>

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/status_view"
                android:hint="@string/notes_hint"
                android:inputType="textCapWords" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
